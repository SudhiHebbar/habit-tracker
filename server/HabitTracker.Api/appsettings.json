{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=HabitTrackerDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "AllowedHosts": "*",
  "ApiSettings": {
    "Title": "Habit Tracker API",
    "Version": "v1",
    "Description": "API for managing habit trackers and tracking progress"
  },
  "TrackerLimits": {
    "MaxTrackersPerUser": 20,
    "MaxHabitsPerTracker": 100,
    "MaxTrackerNameLength": 100,
    "MaxTrackerDescriptionLength": 500
  },
  "HabitLimits": {
    "MaxHabitsPerTracker": 500,
    "MaxNameLength": 100,
    "MaxDescriptionLength": 500,
    "MaxTargetCount": 100
  }
}
