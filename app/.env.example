# Example Environment Configuration
# Copy this file to .env.local and fill in your values

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# Feature Flags
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_DEBUG=false
VITE_FEATURE_MOCK_API=false

# Application Configuration
VITE_APP_NAME=Habit Tracker
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=local

# Database Configuration (for future use)
VITE_DB_CONNECTION_STRING=

# Third-party Services
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_ANALYTICS_ID=your_analytics_id_here

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_MAX_HABITS_PER_TRACKER=500
VITE_MAX_TRACKERS_PER_USER=50

# Development Tools
VITE_REACT_DEVTOOLS=true
VITE_LOG_LEVEL=info